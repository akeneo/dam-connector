{
    "name": "pchasle/pim-api-test",
    "description": "Akeneo PIM API test",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Akeneo",
            "homepage": "http://www.akeneo.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "akeneo/api-php-client-ee": "4.0.*",
        "akeneo/api-php-client": "4.0.*",
        "doctrine/dbal": "2.9.*",
        "http-interop/http-factory-guzzle": "^1.0",
        "php-http/guzzle6-adapter": "^2.0",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "akeneo/php-coupling-detector": "0.3.*",
        "phpspec/phpspec": "^4.0",
        "symfony/test-pack": "^1.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:akeneo/api-php-client-ee.git"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "vendor/bin"
    },
    "autoload": {
        "psr-4": {
            "PimApiTest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PimApiTest\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "minimum-stability": "stable",
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
